<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ThinkGo.GoBoardControl"
    Width="480" Height="480">

	<!-- Background can be #FFDCB35C as well -->
    <Grid x:Name="LayoutRoot">
    	<Grid.Background>
    		<ImageBrush Stretch="Fill" ImageSource="Images/boardbg.jpg"/>
    	</Grid.Background>
        <Path x:Name="BoardBackground" Fill="{x:Null}" Stroke="Black" StrokeThickness="1" UseLayoutRounding="True" />
        <Path x:Name="BoardEdge" Fill="{x:Null}" Stroke="Black" StrokeThickness="3" UseLayoutRounding="True"/>
		<Canvas x:Name="PieceCanvas" />
        <Path x:Name="DropTemp" Fill="{x:Null}" Stroke="Blue" StrokeThickness="3" />
    </Grid>
</UserControl>