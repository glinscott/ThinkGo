<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
	xmlns:Phone_Controls="clr-namespace:Phone.Controls;assembly=Phone.Controls"	
	mc:Ignorable="d"
	x:Class="ThinkGo.Learn"
	d:DesignWidth="432" d:DesignHeight="592">

	<Grid x:Name="LayoutRoot" Background="Transparent">
		<StackPanel Orientation="Vertical" d:LayoutOverrides="Height">
			<Button ContentTemplate="{StaticResource MultiLineButtonTemplate}" HorizontalContentAlignment="Left" Margin="0" Padding="10,3,10,5" Click="TutorialClicked">
				<Phone_Controls:MultiLineItem Line1="Go Tutorial" Line2="Learn how to play the game of Go"/>
			</Button>
		
			<Button ContentTemplate="{StaticResource MultiLineButtonTemplate}" HorizontalContentAlignment="Left" Margin="0" Padding="10,3,10,5" Click="HelpClicked">
				<Phone_Controls:MultiLineItem Line1="Help" Line2="Get help about ThinkGo"/>
			</Button>

			<Button ContentTemplate="{StaticResource MultiLineButtonTemplate}" HorizontalContentAlignment="Left" Margin="0" Padding="10,3,10,5" Click="OnlineClicked">
				<Phone_Controls:MultiLineItem Line1="Online Resources" Line2="Resources about Go on the Internet"/>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>